<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="efcTest.fob_entry">



    <!--grid layout is the easy way to do it. Do not work in the office. Do it at your house.-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:columnCount="2"
        android:rowCount="5"
        android:background="@color/purple_200"
        >

        <TextView
            android:id="@+id/t0"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="Keyless Answer Back \nBuzzer or Horn "
            android:background="@color/white"
            />
        <Spinner
            android:id="@+id/sp0"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:autofillHints="click"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/t1"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="Door Lock / Unlock"
            android:background="@color/white"
            />
        <Spinner
            android:id="@+id/sp1"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="sec1"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/t2"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="Welcome Lights"
            android:background="@color/white"
            />
        <Spinner
            android:id="@+id/sp2"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="Door Handle Pop Up "
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="Power Slide Doors"
            android:background="@color/white"
            />
        <Spinner
            android:id="@+id/sp3"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/t4"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="Power Slide Door \nRestriction mode (with fuel lid open)"
            android:background="@color/white"
            />
        <Spinner
            android:id="@+id/sp4"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/t5"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="ower Slide Door Anti-Pinch"
            android:background="@color/white"
            />
        <Spinner
            android:id="@+id/sp5"
            android:layout_columnWeight="1"
            android:layout_height="100sp"
            android:layout_margin="5sp"
            android:textSize="18sp"
            android:text="sec1"
            android:background="@color/white"
            />


        <Button
            android:id="@+id/button_next_fob_entry"
            android:layout_columnWeight="1"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:text="Next"
            android:visibility="visible"/>
            />




    </GridLayout>


</ScrollView>